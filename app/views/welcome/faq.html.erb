          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="panel-group accordion accordion-bordered">
          <% @questions.each do |question| %>
            <div class="panel">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a class="accordion-toggle collapsed-icon" data-toggle="collapse" href="#<%= question.id %>">
                    <small><%= question.name %></small>
                  </a>
                </h4>
              </div>
              <div id="<%= question.id %>" class="panel-collapse collapse in">
                <div class="panel-body">
                  <p><%= question.answer %></p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <div class="hr-icon padding-top20">
            <hr><i class="fa fa-question icon-divider color-default"></i>
          </div>
