<div class="fullsize">
  <div class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1 class="page-title">Preguntas</h1>
        </div>
        <div class="col-md-6">
          <ol class="breadcrumb">
            <li><%= link_to "Home", root_path, :class => "disabled has-submenu" %></li>
            <li>Preguntas</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-wrapper"><!-- Main Container -->
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="service-block sb-border">
          <div class="service-block-icon text-center">
            <div class="icon-wrapper icon-border-round fa-3x">
							<i class="fa fa-question"></i>
						</div>
					</div>
          <div class="service-block-title">
						<p class="text-center">Preguntas Frecuentes</p>
					</div>
          <div class="service-block-content">
            <p class="text-center"></p>
            <div class="text-center"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="panel-group accordion accordion-bordered">
          <% @questions.each do |question| %>
            <div class="panel">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a class="accordion-toggle collapsed-icon" data-toggle="collapse" href="#<%= question.id %>">
                    <small><%= question.name %></small>
                  </a>
                </h4>
              </div>
              <div id="<%= question.id %>" class="panel-collapse collapse in">
                <div class="panel-body">
                  <p><%= question.answer %></p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div><!-- /Main Container -->
