<div class="fullsize">
  <div class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1 class="page-title">Editar Perfil</h1>
        </div>
        <div class="col-md-6">
          <ol class="breadcrumb">
            <li><%= link_to "Home", root_path, :class => "disabled has-submenu" %></li>
            <li>Editar Perfil</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-wrapper">
  <div class="container container-inner"> <!-- Container -->
    <div class="row">
      <div class="col-md-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :name, "Nombre" %>
            <%= f.text_field :name, autofocus: true, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email, "Correo" %>
            <%= f.email_field :email, autofocus: false, :class => "form-control" %>
          </div>
          <% if resource_name.to_s == "client" %>
            <div class="form-group">
              <%= f.label :phone, "Telefono" %>
              <%= f.text_field :phone, autofocus: false, :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :address, "Direcci칩n" %>
              <%= f.text_field :address, autofocus: false, :class => "form-control" %>
            </div>
          <% end %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="form-group">
            <%= f.label :password, "Contrase침a" %> <i>(Deja en blanco si no deseas cambiarla)</i><br />
            <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmaci칩n" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :current_password, "Contrase침a actual" %> <i>(La necesitamos para guardar los cambios)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Aceptar", :class => "btn btn-success" %>
          </div>
        <% end %>
        <h3>Borrar cuenta</h3>
        <p>No Satisfecho? <%= button_to "Eliminar cuenta", registration_path(resource_name), data: { confirm: "Seguro" }, method: :delete %></p>
      </div>
    </div>
  </div>
</div>
