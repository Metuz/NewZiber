<div class="fullsize">
  <div class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1 class="page-title">Registrarse</h1>
        </div>
        <div class="col-md-6">
          <ol class="breadcrumb">
            <li><%= link_to "Home", root_path, :class => "disabled has-submenu" %></li>
            <li>Registro</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-wrapper">
  <div class="container container-inner"> <!-- Container -->
    <div class="row">
      <div class="col-md-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :name, "Nombre" %>
            <%= f.text_field :name, autofocus: true, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email, "Correo" %>
            <%= f.email_field :email, autofocus: false, :class => "form-control" %>
          </div>
          <% if resource_name.to_s == "client" %>
            <div class="form-group">
              <%= f.label :phone, "Telefono" %>
              <%= f.text_field :phone, autofocus: false, :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :address, "Dirección" %>
              <%= f.text_field :address, autofocus: false, :class => "form-control" %>
            </div>
          <% end %>
          <% if resource_name.to_s == "manager" %>
            <div class="form-group">
              <%= f.label :location_id, "Sucursal" %>
              <div class="form-group">
                <%= collection_select(:manager, :location_id, Location.all, :id, :name, :class => "form-control") %>
              </div>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :password, "Contraseña" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characteres minimo)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmación" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Aceptar", :class => "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
