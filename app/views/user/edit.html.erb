<div class="container">
  <h2>Editr Empleado</h2>
  <% if @user.errors.any? %>
         <div id="error_explanation">
             <h2><%= pluralize(@user.errors.count, "error") %> prohibited this employee from being saved:</h2>
             <ul>
                 <% @user.errors.full_messages.each do |message| %>
                     <li><%= message %></li>
                 <% end %>
             </ul>
         </div>
     <% end %>
  <%= form_for(@user, url: users_admin_path(@user)) do |f| %>
    <div class="form-group">
      <%= f.label :username, "Nombre" %>
      <%= f.text_field :username, autofocus: true, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email, "Correo" %>
      <%= f.email_field :email, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :location_id, "Sucursal" %>
      <div class="form-group">
        <%= collection_select(:user, :location_id, Location.all, :id, :name, :class => "form-control") %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :admin, "Administrador" %>
      <%= f.check_box :admin %>
    </div>
    <div class="form-group">
      <%= f.label :manager, "Manager" %>
      <%= f.check_box :manager %>
    </div>
    <div class="form-group">
      <%= f.label :technician, "Tecnico" %><br />
      <%= f.check_box :technician %>
    </div>
    <div class="form-group">
      <%= f.label :receptionist, "Recepcionista" %><br />
      <%= f.check_box :receptionist %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Aceptar", :class => "btn btn-success" %>
    </div>
  <% end %>
  <p><%= link_to "Regresar", users_admin_index_path %></p>
</div>
