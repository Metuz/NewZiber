<h2>Edit</h2>
<% if @user.errors.any? %>
       <div id="error_explanation">
           <h2><%= pluralize(@user.errors.count, "error") %> prohibited this category_activity from being saved:</h2>
           <ul>
               <% @user.errors.full_messages.each do |message| %>
                   <li><%= message %></li>
               <% end %>
           </ul>
       </div>
   <% end %>
<%= form_for(@user, url: users_admin_path(@user)) do |f| %>

  <div class="field">
    <%= f.label :username, "Nombre" %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :facebook, "Facebook" %><br />
    <%= f.text_field :facebook, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :twitter, "Twtter" %><br />
    <%= f.text_field :twitter, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :location_id, "Ubicacion" %><br />
    <%= collection_select(:user, :location_id, Location.all, :id, :name) %>
  </div>

  <div class="field">
    <p>
      <%= f.label :admin, "Administrador" %><br />
      <%= f.check_box :admin %>
    </p>
    <p>
      <%= f.label :manager, "Manager" %><br />
      <%= f.check_box :manager %>
    </p>
    <p>
      <%= f.label :technician, "Tecnico" %><br />
      <%= f.check_box :technician %>
    </p>
    <p>
      <%= f.label :receptionist, "Recepcionista" %><br />
      <%= f.check_box :receptionist %>
    </p>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>
