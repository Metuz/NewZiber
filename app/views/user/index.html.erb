<h1>Empleados</h1>
<div class="table-responsive">
  <table class = "table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Cargo</th>
        <th>Sucursal</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.charge %></td>
          <td><%= user.location.name %></td>
          <% if can? :show, user %>
            <td><%= link_to "Ver", users_admin_path(user) %></td>
          <% end %>
          <% if can? :update, user %>
            <td><%= link_to "Editar", edit_users_admin_path(user) %></td>
          <% end %>
          <% if can? :destroy, user %>
            <td><%= link_to 'Eliminar', users_admin_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% if can? :create, @user %>
  <p><%= link_to "Agregar Empleado", new_users_admin_path %></p>
<% end %>
<p><%= link_to "Home", root_path %></p>
