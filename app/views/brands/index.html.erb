<h1>Marcas</h1>
<div class="table-responsive">
  <table class = "table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @brands.each do |brand| %>
        <tr>
          <td><%= brand.name %></td>
          <% if can? :show, brand %>
            <td><%= link_to 'Ver', brand %></td>
          <% end %>
          <% if can? :update, brand %>
            <td><%= link_to 'Editar', edit_brand_path(brand) %></td>
          <% end %>
          <% if can? :destroy, brand %>
            <td><%= link_to 'Eliminar', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<% if can? :create, @brand %>
  <p><%= link_to 'Agregar Marca', new_brand_path %></p>
<% end %>
<p><%= link_to "Home", root_path %></p>
