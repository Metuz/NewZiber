
<div class="container">
  <h2>Unetenos</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :username, "Nombre" %>
      <%= f.text_field :username, autofocus: true, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email, "Correo" %>
      <%= f.email_field :email, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :location_id, "Sucursal" %>
      <div class="form-group">
        <%= collection_select(:user, :location_id, Location.all, :id, :name, :class => "form-control") %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :admin, "Administrador" %>
      <%= f.check_box :admin %>
    </div>
    <div class="form-group">
      <%= f.label :manager, "Manager" %>
      <%= f.check_box :manager %>
    </div>
    <div class="form-group">
      <%= f.label :technician, "Tecnico" %>
      <%= f.check_box :technician %>
    </div>
    <div class="form-group">
      <%= f.label :receptionist, "Recepcionista" %>
      <%= f.check_box :receptionist %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Contraseña" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmación" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Aceptar", :class => "btn btn-success" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>

</div>
