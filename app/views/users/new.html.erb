<h2>Sign up</h2>

<%= form_for(@user url: new_user_admin_path) do |f| %>

  <div class="field">
    <%= f.label :username, "Nombre" %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :facebook, "Facebook" %><br />
    <%= f.text_field :facebook, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :twitter, "Twtter" %><br />
    <%= f.text_field :twitter, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :location_id, "Ubicacion" %><br />
    <%= collection_select(:user, :location_id, Location.all, :id, :name) %>
  </div>

  <div class="field">
    <p>
      <%= f.label :admin, "Administrador" %><br />
      <%= f.check_box :admin %>
    </p>
    <p>
      <%= f.label :manager, "Manager" %><br />
      <%= f.check_box :manager %>
    </p>
    <p>
      <%= f.label :technician, "Tecnico" %><br />
      <%= f.check_box :technician %>
    </p>
    <p>
      <%= f.label :receptionist, "Recepcionista" %><br />
      <%= f.check_box :receptionist %>
    </p>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
