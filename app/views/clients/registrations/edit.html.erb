<div class="fullsize">
  <div class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1 class="page-title">Editar Perfil</h1>
        </div>
        <div class="col-md-6">
          <ol class="breadcrumb">
            <li><%= link_to "Home", root_path, :class => "disabled has-submenu" %></li>
            <li>Editar Perfil</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-wrapper">
  <div class="container container-inner"> <!-- Container -->
    <div class="row">
      <div class="col-md-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :clientname, "Nombre" %>
            <%= f.text_field :clientname, autofocus: true, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email, "Correo" %>
            <%= f.email_field :email, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :phone, "Telefono" %>
            <%= f.text_field :phone, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :address, "Direccion" %>
            <%= f.text_field :address, :class => "form-control" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="form-group">
            <%= f.label :password, "Contraseña" %> <i>(Dejar en blanco si no deseas cambiarla)</i><br />
            <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "Confimacion" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :current_password, "Contraseña Actual" %> <i>(Para guardar los cambios necesitamos tu contraseña actual)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Aceptar", :class => "btn btn-success" %>
          </div>
        <% end %>
        <h3>Eliminar Cuenta</h3>
        <p>Insactifescho? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
        <%= link_to "Regresar", :back %>
      </div>
    </div>
  </div> <!-- /Container -->
</div>
