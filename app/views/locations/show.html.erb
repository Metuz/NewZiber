<h1><%= @location. name %></h1>
<div class="row">
  <div class="col-md-6">
    <p>Direccio√≥n: <%= @location.address %> </p>
  </div>
  <div class="col-md-6">
    <p>Telefono: <%= @location.phone %></p>
  </div>
</div>
<div class="row">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#empleados" aria-controls="empleados" role="tab" data-toggle="tab">Empleados</a></li>
    <li role="presentation"><a href="#productos" aria-controls="prodcutos" role="tab" data-toggle="tab">Productos</a></li>
    <li role="presentation"><a href="#reportes" aria-controls="reportes" role="tab" data-toggle="tab">Reportes</a></li>
  </ul>
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="empleados">
      <%= render 'locations/employees' %>
    </div>
    <div role="tabpanel" class="tab-pane fade" id="productos">
      <%= render 'locations/products' %>
    </div>
    <div role="tabpanel" class="tab-pane fade" id="reportes">
      <%= render 'locations/reports' %>
    </div>
  </div>
</div>
<br/>
<% if can? :update, @location %>
  <p><%= link_to 'Editar', edit_location_path(@location) %></p>
<% end %>
<p><%= link_to 'Regresar', locations_path %></p>
