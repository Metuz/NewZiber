<div class="fullsize">
  <div class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1 class="page-title">Reporte <small><%= @report.pin %></small></h1>
        </div>
        <div class="col-md-6">
          <ol class="breadcrumb">
            <li><%= link_to "Home", root_path, :class => "disabled has-submenu" %></li>
            <li>Reporte <small><%= @report.pin %></small></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-wrapper">
  <div class="container container-inner"> <!-- Container -->
    <div class="row">
      <div class="col-md-12">
        <h3>Datos Tecnico</h3>
        <div class="row">
          <div class="col-md-4">
            Nombre: <%= @report.user.username if @report.user_id_present? %>
          </div>
          <div class="col-md-4">
            Email: <%= @report.user.email if @report.user_id_present? %>
          </div>
          <div class="col-md-4">
            Asigando: <%= @report.delivered_at.strftime('%d/%m/%y') if @report.user_id_present? %>
          </div>
        </div>
        <h2>Producto</h2>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>No. de Serie</th>
                <th>Lugar de Compra</th>
                <th>Fecha de Compra</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @report.brand.name %></td>
                <td><%= @report.model %></td>
                <td><%= @report.serial %></td>
                <td><%= @report.store %></td>
                <td><%= @report.bought_at.strftime('%d/%m/%y %R')%></td>
              </tr>
            </tbody>
          </table>
        </div>
        <h3>Etapas de Revision</h3>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Comentario</th>
              </tr>
            </thead>
            <tbody>
              <% @report.inspections.each do |inspection| %>
                <tr class = "inspection-list">
                  <td><%= inspection.title %></td>
                  <td><%= inspection.comment %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= link_to 'Imprimir', report_path(format: 'pdf') %>

    </div>
  </div>
</div>
