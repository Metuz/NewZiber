<h1>Reporte <small><%= @report.pin %></small></h1>
<h3>Datos Tecnico</h3>
<div class="row">
  <div class="col-md-4">
    Nombre: <%= @report.user.username if @report.user_id_present? %>
  </div>
  <div class="col-md-4">
    Email: <%= @report.user.email %>
  </div>
  <div class="col-md-4">
    Asigando: <%= @report.delivered_at.strftime('%d/%m/%y') %>
  </div>
</div>
<h2>Producto</h2>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Nombre</th>
        <th>No. de Serie</th>
        <th>No. de parte</th>
        <th>Lugar de Compra</th>
        <th>Fecha de Compra</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @report.brand.name %></td>
        <td><%= @report.model %></td>
        <td><%= @report.name %></td>
        <td><%= @report.serial %></td>
        <td><%= @report.number %></td>
        <td><%= @report.store %></td>
        <td><%= @report.bought_at.strftime('%d/%m/%y %R')%></td>
      </tr>
    </tbody>
  </table>
</div>
<h3>Etapas de Revision</h3>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Comentario</th>
      </tr>
    </thead>
    <tbody>
      <% @report.inspections.each do |inspection| %>
        <tr class = "inspection-list">
          <td><%= inspection.title %></td>
          <td><%= inspection.comment %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'Imprimir', report_path(format: 'pdf') %>
