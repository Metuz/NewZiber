    <ul>
    <% @report.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@report) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Nombre del Producto" %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :serial, "No. de Serie" %>
    <%= f.text_field :serial, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :number, "Numero de Parte" %>
    <%= f.text_field :number, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :location_id, "Sucursal a enviar el producto" %>
    <div class="form-group">
      <%= collection_select(:report, :location_id, Location.all, :id, :name) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Aceptar", :class => "btn btn-success" %>
  </div>
<% end %>
