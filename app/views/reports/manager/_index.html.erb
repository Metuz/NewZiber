<div class="fullsize">
  <div class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h3 class="page-title">Reportes Sucursal <%= current_user.location.name %></h3>
        </div>
        <div class="col-md-6">
          <ol class="breadcrumb">
            <li><%= link_to "Reportes", reports_path, :class => "disabled has-submenu" %></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-wrapper" id="admin">
  <div class="table-responsive">
    <table class="datatable">
      <thead>
        <tr>
          <th>Clave</th>
          <th>Clente</th>
          <th>Producto</th>
          <th>Fecha de Asignacion</th>
          <th>Status</th>
          <th>Costo Total</th>
        </tr>
      </thead>
      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td><%= link_to report do %><i class="fa fa-eye"></i><% end %><%= report.pin %></td>
            <td><%= report.client.name %></td>
            <td><%= report.name %></td>
            <td><%= report.delivered_at %></td>
            <td><%= report.finished %></td>
            <td><%= number_to_currency(report.total) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
