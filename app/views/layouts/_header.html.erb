<div class="header-wrapper">
  <div id="login" class="modal fade" aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times-circle-o"></i></button>
           <h3 class="modal-title title-color" id="myModalLabel"><i class="fa fa-user"></i> Iniciar Sesion</h3>
         </div>
         <div class="modal-body">
           <%= form_for(:client, :url => session_path(:client)) do |f| %>
             <div class="form-group input-group">
               <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
               <%= f.email_field :email, :class => "form-control", :placeholder => "Correo" %>
             </div>
             <div class="form-group input-group">
               <span class="input-group-addon"><i class="fa fa-key"></i></span>
               <%= f.password_field :password, :class => "form-control", :placeholder => "Contraeña" %>
             </div>
             <div class="form-group">
               <div class="checkbox">
                 <label><%= f.check_box :remember_me %>Recordar!</label> | <%= link_to "Olvidaste la Contraseña?", new_client_password_path %>
               </div>
             </div>
             <div class="form-group">
               <%= link_to "Registrase", new_client_registration_path %>
             </div>
             <div class="form-group">
               <%= f.submit "Aceptar", :class => "btn btn-primary btn-sm" %>
             </div>
           <% end %>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
	<!-- Header Bottom Container -->
  <div class="header-bottom" >
    <div class="container"> <!-- Container -->
      <div class="row"><!-- Row-->
        <div class="col-md-12">
          <!-- Navigation -->
          <div class="main-navigation">
            <a id="menu-button"></a>
            <ul id="main-menu" class="sm sm-default">
              <li><%= link_to "Home", root_path %></li>
              <li><%= link_to "Conocenos", about_path %></li>
              <li><%= link_to "Servicios", services_path %></li>
              <li><%= link_to "Preguntas", faq_path %></li>
              <% if client_signed_in? %>
                <li><a class="disabled has-submenu"><i class="fa fa-user">Perfil</i></a>
                  <ul>
                    <% if  can? :update, current_client %>
                      <li><%= link_to('Editar Perfil', edit_client_registration_path) %></li>
                    <% end %>
                    <li role="separator" class="divider"></li>
                    <li><%= link_to('Salir', destroy_user_session_path, :method => :delete) %></li>
                  </ul>
                </li>
                </ul>
              </div>
            <% else %>
                </ul>
              </div>
              <div class="top-search hidden-xs hidden-sm"><!-- Top Search -->
                <div class="top-login">
                  <a  data-target="#login" data-toggle="modal" class="toggle-link"><i class="fa fa-user"></i> Iniciar Sesion</a>
                </div>
              </div><!-- /Top Search -->
            <% end %>
          <!-- /Navigation -->
        </div>
      </div> <!-- /Row -->
    </div> <!-- /Container -->
  </div>
  <!-- /Header Bottom Container -->
</div>
<!-- /Header Container -->

