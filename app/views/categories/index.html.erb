<h1>Categorias</h1>
<div class="table-responsive">
  <table class = "datatable">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Productos</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= link_to category do %><i class="fa fa-eye"></i><% end %> <%= category.name %></td>
          <td><%= category.products.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<% if can? :create, @category %>
  <p><%= link_to 'Agregar Categoria', new_category_path %></p>
<% end %>
<p><%= link_to "Home", root_path %></p>
