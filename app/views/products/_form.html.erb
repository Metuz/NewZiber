<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
    <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@product) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :brand_id, "Marca" %>
    <div class="form-group">
      <%= collection_select(:product, :brand_id, Brand.all, :id, :name, :class => "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category_id, "Categoria" %>
    <div class="form-group">
      <%= collection_select(:product, :category_id, Category.all, :id, :name, :class => "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location_id, "Sucursal" %>
    <div class="form-group">
      <%= collection_select(:product, :location_id, Location.all, :id, :name, :class => "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, "Cantidad" %>
    <%= f.text_field :quantity, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Aceptar", :class => "btn btn-success" %>
  </div>
<% end %>
