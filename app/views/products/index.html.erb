<div class="fullsize">
  <div class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1 class="page-title">Productos</h1>
        </div>
        <div class="col-md-6">
          <ol class="breadcrumb">
            <li><%= link_to "Productos", brands_path, :class => "disabled has-submenu" %></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-wrapper" id="admin">
  <div class="table-responsive">
    <table class = "datatable">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Categoria</th>
          <th>Marca</th>
          <th>Sucursal</th>
          <th>Cantidad</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= link_to product do %><i class="fa fa-eye"></i><% end %> <%= product.name %></td>
            <td><%= product.category.name %></td>
            <td><%= product.brand.name %></td>
            <td><%= product.location.name %></td>
            <td><span id="quantity"%><%= product.quantity %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <% if can? :create, @product %>
    <p><%= link_to 'Agregar Producto', new_product_path, :class => "btn btn-success" %> %></p>
  <% end %>
</div>
