<div class="fullsize">
  <div class="page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1 class="page-title"><%= @product.name %></h1>
        </div>
        <div class="col-md-6">
          <ol class="breadcrumb">
            <li><%= link_to "Productos", products_path, :class => "disabled has-submenu" %></li>
            <li><%= @product.name %></li>
            <%if can? :update, @product %>
              <li><%= link_to 'Editar', edit_product_path(@product) %></li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="main-wrapper" id="admin">
  <div class="row">
    <h2 class="title-color heading-single text-center"><span>Datos</span></h2>
  </div>
  <div class="row">
    <div class="col-md-3">
      <strong>Nombre:</strong>
      <%= @product.name %>
    </div>
    <div class="col-md-3">
      <strong>Categoria:</strong>
      <%= @product.category.name %>
    </div>
    <div class="col-md-3">
      <strong>Marca:</strong>
      <%= @product.brand.name %>
    </div>
    <div class="col-md-3">
      <strong>Sucursal:</strong>
      <%= @product.location.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <strong>Cantidad:</strong>
      <span id="quantity"%><%= @product.quantity %></span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <% if can? :update, @product %>
        <div>
          <%= form_for @product do |f| %>
            <strong>Agregar Cantidad</strong>
            <%= f.text_field :sum %>
            <%= f.submit "Agregar" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
